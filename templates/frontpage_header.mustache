{{!
    @template liftoff/frontpage_header

    This template renders the header.

    Example context (json):
    {
        "pageheadingbutton": "page_heading_button_html"
    }

    FrontPage header.
}}
<div class="container-fluid lec-container">
    <header class="row justify-content-between lec-frontpage-header">
        <div class="col-10">
            <div class="row-fluid">
                <a href="{{{ config.wwwroot }}}" class="lec-logo d-none d-sm-inline">
                  
                        <span class="logo d-none d-sm-inline">
                            <img src="{{logosrc}}" alt="{{sitename}}">
                        </span>
                  

                </a>
                <div class="lec-align">
                    <h1 class="site-name d-none d-inline-block"><a href="{{{ config.wwwroot }}}">{{{ sitename }}} </a><br><small>{{{summary}}}</small></h1>
                </div>
        </div>
        </div>
        <div id="course-header" class="col-2">
            <div class="pull-right">
                {{{settingsmenu}}}
            </div>
        </div>
    </header>
</div>